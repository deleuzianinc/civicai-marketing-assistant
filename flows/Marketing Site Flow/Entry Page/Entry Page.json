{
  "name": "6b0ca70b-1ee7-46fd-81a6-8e397c041277",
  "displayName": "Entry Page",
  "description": "Flow entry point offering quick choices",
  "entryFulfillment": {
    "messages": [
      {
        "text": {
          "text": [
            "Welcome! I'm here to help you learn about CivicAI. Would you like to:",
            "• Learn what CivicAI is",
            "• Ask a specific question",
            "• Book a demo"
          ]
        },
        "languageCode": "en"
      }
    ]
  },
  "transitionRoutes": [
    {
      "condition": "$session.params.user_intent == 'demo' OR $page.params.user_choice == 'demo'",
      "targetPage": "DemoCapture Page",
      "name": "demo-route"
    },
    {
      "condition": "$page.params.user_choice == 'learn' OR $page.params.user_choice == 'ask'",
      "targetPage": "QnA Page",
      "name": "qna-route"
    }
  ],
  "eventHandlers": [
    {
      "event": "sys.no-match-default",
      "targetPage": "QnA Page"
    }
  ]
}

