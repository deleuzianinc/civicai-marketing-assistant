{
  "name": "9b501150-4dd3-4cc5-91e1-db8f3b0c7adb",
  "displayName": "Handoff Page",
  "description": "Human escalation with optional email capture",
  "entryFulfillment": {
    "messages": [
      {
        "text": {
          "text": [
            "I'd be happy to connect you with our team."
          ]
        },
        "languageCode": "en"
      }
    ]
  },
  "form": {
    "parameters": [
      {
        "displayName": "visitor_email",
        "entityType": "sys.email",
        "fillBehavior": {
          "initialPromptFulfillment": {
            "messages": [
              {
                "text": {
                  "text": [
                    "What's the best email for our team to reach you?"
                  ]
                }
              }
            ]
          },
          "repromptEventHandlers": [
            {
              "event": "sys.no-match-default",
              "triggerFulfillment": {
                "messages": [
                  {
                    "text": {
                      "text": [
                        "Please provide a valid email address so our team can reach you."
                      ]
                    }
                  }
                ]
              }
            }
          ]
        },
        "required": true,
        "redact": false,
        "advancedSettings": {}
      }
    ]
  },
  "transitionRoutes": [],
  "eventHandlers": [
    {
      "event": "sys.no-input-default",
      "triggerFulfillment": {
        "messages": [
          {
            "text": {
              "text": [
                "No problem. Let me know when you're ready to share your email."
              ]
            }
          }
        ]
      }
    },
    {
      "event": "sys.form-filled",
      "triggerFulfillment": {
        "webhook": "lead_export_webhook",
        "tag": "handoff_request",
        "setParameterActions": [
          {
            "parameter": "conversion_type",
            "value": "handoff"
          }
        ],
        "messages": [
          {
            "text": {
              "text": [
                "Thanks! Our team will reach out to $session.params.visitor_email within one business day."
              ]
            }
          }
        ]
      },
      "targetFlow": "00000000-0000-0000-0000-000000000000",
      "targetPage": "END_FLOW"
    }
  ]
}

